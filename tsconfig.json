{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "lib": ["ES2020"],
        "declaration": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "rootDir": "src",
        "outDir": "./dist",
        // "sourceMap": true,
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/*.ts"
    ]
}